{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["jest", "react-native", "node"],
    /* Module Resolution */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-native",
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    /* Path Mapping (Optional but useful) */
    "baseUrl": ".",
    "paths": {
      "@app": ["src"],
      "@app/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", "nativewind-env.d.ts"],
  "exclude": ["**/node_modules", "babel.config.js", "metro.config.js", "**/Pods"]
}
